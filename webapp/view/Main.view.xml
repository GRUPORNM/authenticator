<mvc:View controllerName="authenticator.controller.Main"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page id="_IDGenPage1" title="Centered Text" showHeader="false">
        <html:header>
            <html:div class="loginLogo">
                <html:img src="/sap/bc/ui5_ui5/tqa/launchpad/img/logobranco.png" width="84" />
            </html:div>
        </html:header>
        <content>
            <FlexBox id="_IDGenFlexBox1" alignItems="Center" justifyContent="Center" height="100%" direction="Column">
                <html:div id="USERNAME_BLOCK" class="loginInput sapUiLightestBG">
                    <html:label id="USERNAME_LABEL" for="USERNAME_FIELD-inner" class="loginHiddenAccessible">
                        Utilizador
                    </html:label>
                    <html:input id="USERNAME_FIELD-inner" tabindex="0" type="text" class="loginInputField" name="sap-user" inputmode="verbatim" autocorrect="off" autocapitalize="none" placeholder="Utilizador" title="Usuário" required="true" aria-required="true" aria-describedby="USERNAME_LABEL" />
                </html:div>

                <html:div id="PASSWORD_BLOCK" class="loginInput sapUiLightestBG">
                    <html:label id="PASSWORD_LABEL" for="PASSWORD_FIELD-inner" class="loginHiddenAccessible">
                        Senha
                    </html:label>
                    <html:input id="PASSWORD_FIELD-inner" tabindex="0" type="password" class="loginInputField" name="sap-password" inputmode="verbatim" placeholder="Palavra-Passe" title="Senha" required="true" aria-required="true" aria-describedby="PASSWORD_LABEL" />
                </html:div>

                <html:div id="LANGUAGE_BLOCK">
                    <html:div id="LANGUAGE_LABEL_BLOCK" class="loginDisplayInput">
                        <html:label id="LANGUAGE_LABEL" for="LANGUAGE_SELECT" class="sapUiContentForegroundTextColor">
                            Idioma
                        </html:label>
                    </html:div>
                    <html:div id="LANGUAGE_SELECT_BLOCK">
                        <html:select id="LANGUAGE_SELECT" tabindex="0" class="loginSelect" title="Idioma" aria-describedby="LANGUAGE_LABEL">
                            <html:option value="PT">PT - Português</html:option>
                            <html:option value="EN">EN - English</html:option>
                            <html:option value="ES">ES - Español</html:option>
                        </html:select>
                    </html:div>
                </html:div>

                <html:div id="LOGIN_SUBMIT_BLOCK" class="loginButtonRow">
                    <html:button id="LOGIN_LINK" type="submit" class="loginButton sapUiButtonEmphasized" tabindex="0" title="Logon">
                        Iniciar Sessão
                    </html:button>
                </html:div>

                <html:div id="LOGIN_CHANGE_PASSWORD_BLOCK" class="loginButtonRow">
                    <html:button id="CHANGE_PASSWORD_LINK" type="button" class="loginButton sapUiButtonLite" tabindex="0" title="Modificar senha">
                        Alterar Palavra-Passe
                    </html:button>
                </html:div>
            </FlexBox>
        </content>
        <html:footer>
            <html:div class="loginCopyright">
                <html:label class="sapMLabel">
                    Direitos autorais © 2024 Grupo RNM Todos os direitos reservados.
                </html:label>
            </html:div>
        </html:footer>
    </Page>
</mvc:View>
