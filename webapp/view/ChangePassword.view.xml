<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="authenticator.controller.ChangePassword"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page
        id="_IDGenPage1"
        title="Centered Text"
        showHeader="false"
    >
        <html:header>
            <html:div class="loginLogo">
                <html:img
                    src="/sap/bc/ui5_ui5/tqa/launchpad/img/logobranco.png"
                    width="84"
                />
            </html:div>
        </html:header>
        <content>
            <FlexBox
                id="_IDGenFlexBox1"
                alignItems="Center"
                justifyContent="Center"
                height="100%"
                direction="Column"
            >
                <html:div
                    id="USERNAME_BLOCK"
                    class="loginInput sapUiLightestBG"
                >
                    <html:label
                        id="USERNAME_LABEL"
                        for="USERNAME_FIELD-inner"
                        class="loginHiddenAccessible"
                    >
                        Utilizador
                    </html:label>
                    <html:input
                        id="USERNAME_FIELD-inner"
                        tabindex="0"
                        type="text"
                        class="loginInputField"
                        name="sap-user"
                        maxlength="12 "
                        inputmode="verbatim"
                        autocorrect="off"
                        autocapitalize="none"
                        placeholder="Utilizador"
                        title="Usuário"
                        required="true"
                        aria-required="true"
                        aria-describedby="USERNAME_LABEL"
                    />
                </html:div>

                <html:div
                    id="PASSWORD"
                    class="loginInput sapUiLightestBG"
                >
                    <html:label
                        id="PASSWORD_LABEL"
                        for="PASSWORD_FIELD-inner"
                        class="loginHiddenAccessible"
                    >
                        Senha Atual
                    </html:label>
                    <html:input
                        id="PASSWORD_FIELD-inner"
                        tabindex="0"
                        type="password"
                        class="loginInputField "
                        name="sap-password"
                        inputmode="verbatim"
                        placeholder="Senha"
                        title="Senha"
                        required="true"
                        aria-required="true"
                        aria-describedby="PASSWORD_LABEL"
                    />
                </html:div>
                <html:div
                    id="PASSWORD_NEW1"
                    class="loginInput sapUiLightestBG"
                >
                    <html:label
                        id="PASSWORD_LABEL"
                        for="PASSWORD_FIELD-inner"
                        class="loginHiddenAccessible"
                    >
                        Nova Senha
                    </html:label>
                    <html:input
                        id="PASSWORD_FIELD-inner"
                        tabindex="0"
                        type="password"
                        class="loginInputField "
                        name="sap-password"
                        inputmode="verbatim"
                        placeholder="Nova Senha"
                        title="Nova Senha"
                        required="true"
                        aria-required="true"
                        aria-describedby="PASSWORD_LABEL"
                    />
                </html:div>
                <html:div
                    id="PASSWORD_NEW2"
                    class="loginInput sapUiLightestBG"
                >
                    <html:label
                        id="PASSWORD_LABEL"
                        for="PASSWORD_FIELD-inner"
                        class="loginHiddenAccessible"
                    >
                        Nova Senha
                    </html:label>
                    <html:input
                        id="PASSWORD_FIELD-inner"
                        tabindex="0"
                        type="password"
                        class="loginInputField "
                        name="sap-password"
                        inputmode="verbatim"
                        placeholder="Confirme a Senha"
                        title="Senha"
                        required="true"
                        aria-required="true"
                        aria-describedby="PASSWORD_LABEL"
                    />
                </html:div>
                <html:div
                    id="LOGIN_CHANGEPASSWORD"
                    class="loginButtonRow"
                >
                    <html:button
                        id="LOGIN_LINK"
                        type="submit"
                        class="loginButton sapUiButtonEmphasized"
                        tabindex="0"
                        title="Logon"
                    >
                        Modificar Senha
                    </html:button>
                </html:div>
                <html:div
                    id="CHANGE_PASSWORD_RETURN"
                    class="loginButtonRow"
                >
                    <html:button
                        id="CHANGE_PASSWORD_RETURNBT"
                        type="button"
                        class="loginButton sapUiButtonLite"
                        tabindex="0"
                        title="Voltar"
                    >
                        Voltar
                    </html:button>
                </html:div>
            </FlexBox>
        </content>
        <html:footer>
            <html:div class="loginCopyright">
                <html:label class="sapMLabel">
                    Direitos autoriais © 2023 Grupo RNM Todos os direitos
                    reservados.
                </html:label>
            </html:div>
        </html:footer>
    </Page>
</mvc:View>
